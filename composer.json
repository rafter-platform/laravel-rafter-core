{
    "name": "rafter-platform/laravel-rafter-core",
    "description": "Laravel integration for the Rafter Platform",
    "keywords": [
        "rafter-platform",
        "laravel-rafter-core"
    ],
    "homepage": "https://github.com/rafter-platform/laravel-rafter-core",
    "license": "MIT",
    "authors": [
        {
            "name": "Josh Larson",
            "email": "jplhomer@gmail.com",
            "homepage": "https://jplhomer.org",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3",
        "google/apiclient": "^2.4",
        "google/cloud-tasks": "^1.5",
        "illuminate/cache": "~5.8.35|^6.0|^7.0",
        "illuminate/contracts": "~5.8.35|^6.0|^7.0",
        "illuminate/queue": "~5.8.35|^6.0|^7.0",
        "illuminate/routing": "~5.8.35|^6.0|^7.0",
        "illuminate/support": "~5.8.35|^6.0|^7.0"
    },
    "require-dev": {
        "symfony/var-dumper": "^4.3",
        "phpunit/phpunit": "^8.2"
    },
    "autoload": {
        "psr-4": {
            "Rafter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rafter\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Rafter\\RafterServiceProvider"
            ]
        }
    }
}
